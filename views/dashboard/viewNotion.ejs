<div class="container py-4 my-4">
  <div class="row mb-4">
    <div class="col">
      <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= notion.title %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end">
      <h3 class="text-center text-success">View Notion</h3>
    </div>
  </div>

  <form action="/dashboard/update/<%=notionId%>" method="post" class="position-relative form-control">
    <div class="form-group mb-4">
      <input type="text" class="form-control" name="title" id="title" value="<%= notion.title%>" required>
    </div>
    <div class="form-group mb-4">
      <textarea name="body" id="body" cols="30" rows="12" required class="form-control" placeholder="Take a notion">
        <%= notion.body %>
      </textarea>
    </div>
    <div class="form-group mb-4">
      <button class="btn btn-primary">Update</button>
      <a class="btn btn-danger ms-4" href="/dashboard/delete/<%=notionId%>">Delete</a>
    </div>
  </form>
</div>